<h1>Listing Congress People</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>branch</th>
      <th>Notes</th>
      <th>District phone</th>
      <th>Capitol phone</th>
      <th>District</th>
      <th>Party</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @congress_people.each do |congress_person| %>
      <tr>
        <td><%= congress_person.first_name %></td>
        <td><%= congress_person.last_name %></td>
        <td><%= congress_person.branch %></td>
        <td><%= congress_person.notes %></td>
        <td><%= congress_person.district_phone %></td>
        <td><%= congress_person.capitol_phone %></td>
        <td><%= congress_person.district %></td>
        <td><%= congress_person.party %></td>
        <td><%= link_to 'Show', congress_person %></td>
        <td><%= link_to 'Edit', edit_congress_person_path(congress_person) %></td>
        <td><%= link_to 'Destroy', congress_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

